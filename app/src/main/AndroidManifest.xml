<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.grirms.crm">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.LOCATION_HARDWARE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppNoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".crm_module.activity.CustomerManagementActivity" />
        <activity android:name=".crm_module.activity.SearchHistoryActivity" />
        <activity android:name=".crm_module.activity.ContactsManagementActivity" />
        <activity android:name=".crm_module.activity.CreateContactsActivity" />
        <activity android:name=".crm_module.activity.CreateCustomerActivity" />
        <activity android:name=".crm_module.activity.ContactsDetailsActivity" />
        <activity android:name=".crm_module.activity.BusinessManagementActivity" />
        <activity android:name=".crm_module.activity.CreateBusinessManagementActivity" />
        <activity android:name=".crm_module.activity.BusinessManagementDetailsActivity" />
    </application>

</manifest>