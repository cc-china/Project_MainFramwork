<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_15">

    <TextView
        android:id="@+id/tv_expect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/shape_line_color4e80f5"
        android:text="预期"
        android:textColor="@color/color333333"
        android:textSize="@dimen/sp_13" />

    <LinearLayout
        android:id="@+id/ll_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_expect"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_business_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26"
            android:textColor="@color/color4E80F5"
            android:textSize="@dimen/sp_28" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_projected_sales_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13"
            android:textColor="@color/color4E80F5"
            android:textSize="@dimen/sp_28" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_number"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商机总数(个)"
            android:textColor="@color/color666666"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预计销售额(万)"
            android:textColor="@color/color666666"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_info"
        android:layout_marginTop="@dimen/dp_15"
        android:drawableStart="@drawable/shape_line_color4e80f5"
        android:text="跟进"
        android:textColor="@color/color333333"
        android:textSize="@dimen/sp_13" />

    <LinearLayout
        android:id="@+id/ll_number_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_follow"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_cycle_money_count"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="26"
            android:textColor="@color/color666666"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:id="@+id/tv_receivable_money_count"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="13"
            android:textColor="@color/color666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_money_all_count"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="13"
            android:textColor="@color/color666666"
            android:textSize="@dimen/sp_12" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_info_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_number_2"
        android:layout_marginTop="@dimen/dp_6"
        android:orientation="horizontal">


        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="回款总金额(万)"
            android:textColor="@color/color666666"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="应收账款(万)"
            android:textColor="@color/color666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="费用总金额"
            android:textColor="@color/color666666"
            android:textSize="@dimen/sp_12" />


    </LinearLayout>

</RelativeLayout>