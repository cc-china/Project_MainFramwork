<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:text="空气调节系统"
        android:textColor="@color/color333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_states"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/shape_stroke_colorff9b26"
        android:paddingBottom="@dimen/dp_4"
        android:paddingEnd="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:paddingTop="@dimen/dp_4"
        android:text="初步接洽"
        android:textColor="@color/colorFF9B26"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/tv_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_8"
        android:text="虎扑人资"
        android:textColor="@color/color666666"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_estimated_sales_quota_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_company_name"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_8"
        android:text="预计销售金额："
        android:textColor="@color/color4E80F5"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_estimated_sales_quota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_company_name"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toEndOf="@+id/tv_estimated_sales_quota_"
        android:textColor="@color/color4E80F5"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>