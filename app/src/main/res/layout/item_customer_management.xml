<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/cb_check"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:visibility="gone"
        android:button="@drawable/selector_icon_check_box"
        android:layout_marginStart="@dimen/dp_15"/>

    <TextView
        android:id="@+id/tv_states"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_toEndOf="@+id/cb_check"
        android:background="@drawable/shape_corner_color4e80f5"
        android:paddingBottom="@dimen/dp_4"
        android:paddingEnd="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:paddingTop="@dimen/dp_4"
        android:text="待审核"
        android:textColor="@color/colorF6F6F6"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/tv_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_toEndOf="@+id/tv_states"
        android:text="虎扑公司"
        android:textColor="@color/color333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_customer_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_states"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginStart="@dimen/sp_15"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_toEndOf="@+id/cb_check"
        android:text="客户类型："
        android:textColor="@color/color666666"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_customer_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_states"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_toEndOf="@+id/tv_customer_type"
        android:text="账期客户级别："
        android:textColor="@color/color666666"
        android:textSize="@dimen/sp_12" />
</RelativeLayout>