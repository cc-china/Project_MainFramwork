<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorFFFFFF"
    android:paddingBottom="@dimen/dp_25"
    android:paddingEnd="@dimen/dp_20"
    android:paddingStart="@dimen/dp_20"
    android:paddingTop="@dimen/dp_25">

    <TextView
        android:id="@+id/tv_contacts_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="哈哈"
        android:textColor="@color/color333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_contacts_info_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/tv_contacts_name"
        android:background="@drawable/shape_corner_15_colorff9b26"
        android:paddingBottom="@dimen/dp_4"
        android:paddingEnd="@dimen/dp_8"
        android:paddingStart="@dimen/dp_8"
        android:paddingTop="@dimen/dp_4"
        android:text="关键联系人"
        android:textColor="@color/colorF4F4F4"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/tv_states"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/tv_contacts_info_tab"
        android:background="@drawable/shape_corner_15_color4e80f5"
        android:paddingBottom="@dimen/dp_4"
        android:paddingEnd="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:paddingTop="@dimen/dp_4"
        android:text="有效"
        android:textColor="@color/colorF4F4F4"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/tv_contacts_phone_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_contacts_name"
        android:layout_marginTop="@dimen/dp_20"
        android:text="手机： "
        android:textColor="@color/color999999"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_contacts_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_contacts_name"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_toEndOf="@+id/tv_contacts_phone_"
        android:text="18698455947"
        android:textColor="@color/color999999"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_contacts_department_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_contacts_phone_"
        android:layout_marginTop="@dimen/dp_10"
        android:text="所属部门： "
        android:textColor="@color/color999999"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_contacts_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_contacts_phone_"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toEndOf="@+id/tv_contacts_department_"
        android:text="商品中心"
        android:textColor="@color/color999999"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_contacts_position_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_contacts_phone_"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toEndOf="@+id/tv_contacts_department"
        android:text="职务： "
        android:textColor="@color/color999999"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_contacts_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_contacts_phone_"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toEndOf="@+id/tv_contacts_position_"
        android:text="采购专员"
        android:textColor="@color/color999999"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>