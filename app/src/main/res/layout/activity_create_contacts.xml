<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorF0F0F0"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:layout_marginStart="@dimen/dp_15"
            android:drawablePadding="@dimen/dp_5"
            android:drawableStart="@mipmap/arrow_expandable"
            android:gravity="center_vertical"
            android:text="关键信息"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corner_left_right_colorffffff"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">

                <TextView
                    android:id="@+id/tv_contacts_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_25"
                    android:text="姓名"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/tv_contacts_name"
                    android:text="*"
                    android:textColor="@color/colorRed_FF0000"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_contacts_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:layout_marginStart="@dimen/dp_45"
                    android:layout_toEndOf="@+id/tv_contacts_name"
                    android:background="@null"
                    android:hint="请输入"
                    android:textColor="@color/color999999"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorF0F0F0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">

                <TextView
                    android:id="@+id/tv_customer_name_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_25"
                    android:text="客户名称"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/tv_customer_name_"
                    android:text="*"
                    android:textColor="@color/colorRed_FF0000"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:layout_marginStart="@dimen/dp_45"
                    android:layout_toEndOf="@+id/tv_customer_name_"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="点击右侧选择客户"
                    android:textColor="@color/color999999"
                    android:textSize="@dimen/sp_13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dp_10"
                    android:src="@mipmap/next" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorF0F0F0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">

                <TextView
                    android:id="@+id/tv_contacts_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_25"
                    android:text="部门"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/tv_contacts_department"
                    android:text="*"
                    android:textColor="@color/colorRed_FF0000"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_contacts_department"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_45"
                    android:layout_toEndOf="@+id/tv_contacts_department"
                    android:background="@null"
                    android:hint="必填"
                    android:textColor="@color/color999999"
                    android:textSize="@dimen/sp_13" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorF0F0F0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">

                <TextView
                    android:id="@+id/tv_contacts_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_25"
                    android:text="职位"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/tv_contacts_position"
                    android:text="*"
                    android:textColor="@color/colorRed_FF0000"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_contacts_position"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_45"
                    android:layout_toEndOf="@+id/tv_contacts_position"
                    android:background="@null"
                    android:hint="必填"
                    android:textColor="@color/color999999"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorF0F0F0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">

                <TextView
                    android:id="@+id/tv_important_leader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_25"
                    android:text="关键决策人"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/tv_important_leader"
                    android:text="*"
                    android:textColor="@color/colorRed_FF0000"
                    android:textSize="@dimen/sp_14" />

                <ToggleButton
                    android:id="@+id/tb_important_leader"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_45"
                    android:layout_toEndOf="@+id/tv_important_leader"
                    android:background="@null"
                    android:hint="选填"
                    android:textColor="@color/color999999"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorF0F0F0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">

                <TextView
                    android:id="@+id/tv_leave_office"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_25"
                    android:text="是否离职"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/tv_leave_office"
                    android:text="*"
                    android:textColor="@color/colorRed_FF0000"
                    android:textSize="@dimen/sp_14" />

                <ToggleButton
                    android:id="@+id/tb_leave_office"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_45"
                    android:layout_toEndOf="@+id/tv_leave_office"
                    android:background="@null"
                    android:hint="选填"
                    android:textColor="@color/color999999"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorF0F0F0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_25"
                    android:text="性别"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/sp_14" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/tv_sex"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_man"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_25"
                        android:layout_marginStart="@dimen/dp_45"
                        android:background="@null"
                        android:button="@null"
                        android:checked="true"
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableStart="@drawable/selector_icon_check_box"
                        android:text="男"
                        android:textColor="@color/color999999"
                        android:textSize="@dimen/sp_13" />

                    <RadioButton
                        android:id="@+id/rb_women"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_25"
                        android:layout_marginStart="@dimen/dp_20"
                        android:background="@null"
                        android:button="@null"
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableStart="@drawable/selector_icon_check_box"
                        android:text="女"
                        android:textColor="@color/color999999"
                        android:textSize="@dimen/sp_13" />

                </RadioGroup>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorF0F0F0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">

                <TextView
                    android:id="@+id/tv_customer_birthday_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_25"
                    android:text="生日"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_customer_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:layout_marginStart="@dimen/dp_45"
                    android:layout_toEndOf="@+id/tv_customer_birthday_"
                    android:background="@null"
                    android:gravity="center"
                    android:text="1986/03/27(三月十六)"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/sp_13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dp_10"
                    android:src="@mipmap/next" />

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_25"
                android:background="@null"
                android:button="@null"
                android:drawableStart="@drawable/selector_icon_check_box"
                android:gravity="center_vertical"
                android:text="生日提醒"
                android:textColor="@color/color999999"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corner_left_right_colorffffff"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorF0F0F0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">

                <TextView
                    android:id="@+id/tv_important_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_25"
                    android:text="主营业务"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/tv_important_work"
                    android:text="*"
                    android:textColor="@color/colorRed_FF0000"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_important_work"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:layout_marginStart="@dimen/dp_45"
                    android:layout_toEndOf="@+id/tv_important_work"
                    android:background="@null"
                    android:hint="必填"
                    android:textColor="@color/color999999"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorF0F0F0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">

                <TextView
                    android:id="@+id/tv_customer_IDCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_25"
                    android:text="名片"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/et_customer_IDCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_45"
                    android:layout_toEndOf="@+id/tv_customer_IDCard"
                    android:gravity="center_vertical"
                    android:text="请拍照上传"
                    android:textColor="@color/color999999"
                    android:textSize="@dimen/sp_13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_10"
                    android:src="@mipmap/camera" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorF0F0F0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">

                <TextView
                    android:id="@+id/tv_contacts_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_25"
                    android:text="邮箱"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_contacts_remark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_45"
                    android:layout_toEndOf="@+id/tv_contacts_remark"
                    android:background="@null"
                    android:hint="选填"
                    android:textColor="@color/color999999"
                    android:textSize="@dimen/sp_13" />

            </RelativeLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_15"
                android:drawablePadding="@dimen/dp_5"
                android:drawableStart="@mipmap/arrow_expandable"
                android:gravity="center_vertical"
                android:text="联系信息"
                android:textColor="@color/color333333"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_add_contacts"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/dp_5"
                android:drawableStart="@mipmap/add_contacts"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_15"
                android:text="添加联系人"
                android:textColor="@color/color4E80F5"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corner_left_right_colorffffff"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorF0F0F0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">

                <TextView
                    android:id="@+id/tv_person_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_25"
                    android:text="手机号"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorRed_FF0000"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_person_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_25"
                    android:layout_marginStart="@dimen/dp_45"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="必填"
                    android:textColor="@color/color999999"
                    android:textSize="@dimen/sp_13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_10"
                    android:src="@mipmap/add_contacts" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorF0F0F0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">

                <TextView
                    android:id="@+id/tv_company_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_25"
                    android:text="公司电话"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_company_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_45"
                    android:layout_toEndOf="@+id/tv_company_phone"
                    android:background="@null"
                    android:hint="选填"
                    android:textColor="@color/color999999"
                    android:textSize="@dimen/sp_13" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorF0F0F0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">

                <TextView
                    android:id="@+id/tv_contacts_emails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_25"
                    android:text="邮箱"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_contacts_emails"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_45"
                    android:layout_toEndOf="@+id/tv_contacts_emails"
                    android:background="@null"
                    android:hint="选填"
                    android:textColor="@color/color999999"
                    android:textSize="@dimen/sp_13" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorF0F0F0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">

                <TextView
                    android:id="@+id/tv_customer_faxes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_25"
                    android:text="传真"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_customer_faxes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_45"
                    android:layout_toEndOf="@+id/tv_customer_faxes"
                    android:background="@null"
                    android:hint="选填"
                    android:textColor="@color/color999999"
                    android:textSize="@dimen/sp_13" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorF0F0F0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">

                <TextView
                    android:id="@+id/tv_customer_postcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_25"
                    android:text="邮编"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_customer_postcode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_45"
                    android:layout_toEndOf="@+id/tv_customer_postcode"
                    android:background="@null"
                    android:hint="选填"
                    android:textColor="@color/color999999"
                    android:textSize="@dimen/sp_13" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorF0F0F0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45">

                <TextView
                    android:id="@+id/tv_customer_weChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_25"
                    android:text="微信号"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_customer_weChat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
